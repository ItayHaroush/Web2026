APP_NAME="ChefSync IL"
APP_ENV=local
APP_KEY=base64:YOUR_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# SMS / OTP
# Pilot mode:
# - true  => force Twilio (pilot)
# - false => use 019
SMS_PILOT=false

# Provider options: twilio | sms019 | 019
SMS_PROVIDER=twilio

# 019sms (Bearer)
# Request format expects:
# {"sms":{"user":{"username":"..."},"source":"...","destinations":{"phone":["9725XXXXXXXX"]},"message":"..."}}
SMS_019_ENDPOINT=https://019sms.co.il/api
SMS_019_USERNAME=
SMS_019_TOKEN=
SMS_019_SOURCE=05XXXXXXXX
SMS_019_TIMEOUT=10

# Twilio (fallback)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=
TWILIO_FROM=

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=chefsync
DB_USERNAME=root
DB_PASSWORD=

CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_API_URL=http://localhost:8000/api
