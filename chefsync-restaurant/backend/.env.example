APP_NAME="TakeEat IL"
APP_ENV=local
APP_KEY=base64:YOUR_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost:8000

# Development Mode - Bypasses billing & AI credits (local/staging only)
DEV_MODE=true

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# SMS / OTP
# Pilot mode:
# - true  => force Twilio (pilot)
# - false => use 019
SMS_PILOT=false

# Provider options: twilio | sms019 | 019
SMS_PROVIDER=twilio

# 019sms (Bearer)
# Request format expects:
# {"sms":{"user":{"username":"..."},"source":"...","destinations":{"phone":["9725XXXXXXXX"]},"message":"..."}}
SMS_019_ENDPOINT=https://019sms.co.il/api
SMS_019_USERNAME=
SMS_019_TOKEN=
SMS_019_SOURCE=05XXXXXXXX
SMS_019_TIMEOUT=10

# Twilio (fallback)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=
TWILIO_FROM=

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=TakeEat
DB_USERNAME=root
DB_PASSWORD=

CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_API_URL=http://localhost:8000/api

# ==============================================
# AI Provider Configuration
# ==============================================
# AI_PROVIDER options:
#   - 'copilot' => GitHub Copilot CLI (local development ONLY)
#   - 'openai'  => OpenAI HTTP API (production/server)
#
# üîí Security: Copilot CLI is automatically blocked in production
# üìå Recommendation: Use 'copilot' locally, 'openai' in production
AI_PROVIDER=copilot

# GitHub Copilot SDK Configuration (Local Development)
# Only active when AI_PROVIDER=copilot
COPILOT_ENABLED=true
COPILOT_MODE=mock                    # Options: 'mock' (free testing) | 'real' (actual CLI)
COPILOT_CLI_PATH="/path/to/copilot"  # Path to Copilot CLI executable
COPILOT_CACHE_ENABLED=true
COPILOT_CACHE_TTL=86400              # 24 hours

# OpenAI Configuration (Production)
# Only active when AI_PROVIDER=openai
OPENAI_API_KEY=                      # ‚ö†Ô∏è  Required for production (get from platform.openai.com)
OPENAI_MODEL=gpt-4o-mini             # Options: gpt-4o-mini (cheap) | gpt-4 (better quality)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=30
OPENAI_MOCK=false                    # Set to 'true' for testing without API costs

# AI Features Rate Limiting (per tenant per month)
AI_FREE_TIER_CREDITS=20
AI_BASIC_TIER_CREDITS=0
AI_PRO_TIER_CREDITS=500              # Pro trial gets 50, Pro paid gets 500
AI_RATE_LIMIT_PER_MINUTE=10

# AI Cost Tracking
AI_LOG_USAGE=true
